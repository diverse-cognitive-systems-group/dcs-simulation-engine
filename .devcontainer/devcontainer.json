{
    "name": "DCS Simulation Engine Dev",
    // Stop the database services when closing the devcontainer
    "postStopCommand": "docker compose down",
    "build": {
        "dockerfile": "dev.Dockerfile",
        "context": "..",
        "args": {
            "INSTALL_DEV": "true"
        }
    },
    "workspaceFolder": "/app",
    "overrideCommand": true,
    // Docker outside Docker (share the host Docker engine)
    // Mount the Docker socket and feature
    "mounts": [
        "source=${localWorkspaceFolder},target=/app,type=bind,consistency=cached",
        "source=poetry-cache,target=/root/.cache/pypoetry,type=volume",
        "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
    ],
    "features": {
        "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
    },
    "postCreateCommand": "poetry install --with dev",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.black-formatter",
                "charliermarsh.ruff",
                "ms-azuretools.vscode-docker",
                "ms-python.mypy-type-checker",
                "github.vscode-pull-request-github"
            ],
            "settings": {
                "editor.formatOnSave": true,
                "[python]": {
                    "editor.defaultFormatter": "ms-python.black-formatter",
                    "editor.codeActionsOnSave": {
                        "source.organizeImports": "always",
                        "source.fixAll": "always"
                    }
                },
                "python.analysis.typeCheckingMode": "basic",
                "mypy-type-checker.importStrategy": "fromEnvironment",
                "mypy-type-checker.args": [
                    "--strict",
                    "--exclude",
                    "^(tests|analysis_notebooks)/"
                ],
                "python.testing.pytestEnabled": true,
                "python.testing.unittestEnabled": false
            }
        }
    }
}