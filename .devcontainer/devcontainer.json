{
    "name": "DCS Simulation Engine Dev",
    "build": {
        "dockerfile": "dev.Dockerfile",
        "context": "..",
        "args": {
            "INSTALL_DEV": "true"
        }
    },
    "workspaceFolder": "/app",
    "overrideCommand": true,
    // Docker outside Docker (share the host Docker engine)
    // Mount the Docker socket and feature
    "mounts": [
        "source=${localWorkspaceFolder},target=/app,type=bind,consistency=cached",
        "source=uv-cache,target=/root/.cache/uv,type=volume",
        "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
    ],
    "features": {
        "ghcr.io/devcontainers/features/docker-outside-of-docker": {
            "version": "latest"
        }
    },
    "postCreateCommand": "uv sync --extra dev",
    "remoteEnv": {
        "PATH": "/app/.venv/bin:${containerEnv:PATH}"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.black-formatter",
                "charliermarsh.ruff",
                "ms-azuretools.vscode-docker",
                "streetsidesoftware.code-spell-checker",
                "github.vscode-pull-request-github"
            ],
            "settings": {
                "editor.formatOnSave": true,
                "[python]": {
                    "editor.defaultFormatter": "ms-python.black-formatter",
                    "editor.codeActionsOnSave": {
                        "source.organizeImports": "always",
                        "source.fixAll": "always"
                    }
                },
                "python.analysis.typeCheckingMode": "basic",
                // "mypy-type-checker.importStrategy": "fromEnvironment",
                // "mypy-type-checker.args": [
                //     "--strict",
                //     "--exclude",
                //     "^(tests|analysis_notebooks)/"
                // ],
                "python.testing.pytestEnabled": true,
                "python.testing.unittestEnabled": false
            }
        }
    }
}